<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bs_vaccine_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_vaccine_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="49dp"
        android:fontFamily="@font/poppins_bold"/>

    <TextView
        android:id="@+id/tv_vaccine_effects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_rsc_side_effects"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_vaccine_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"/>

    <TextView
        android:id="@+id/tv_vaccine_list_effects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_vaccine_effects"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_vaccine_list_effects"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/ll_vaccine_doses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_daftar_vaksin"
            android:layout_marginStart="23dp"
            >
            <TextView
                android:id="@+id/tv_vaccine_doses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_rsc_doses"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_vaccine_effectiveness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_daftar_vaksin"
            android:layout_marginStart="20dp"
            >
            <TextView
                android:id="@+id/tv_vaccine_effectiveness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_rsc_effectivity"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>